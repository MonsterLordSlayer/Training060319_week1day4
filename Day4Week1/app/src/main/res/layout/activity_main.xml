<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/GridLayout1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:columnCount="3"

    android:orientation="horizontal"
    tools:context=".MainActivity">
    <TextView
        android:id="@+id/result"
        android:layout_columnSpan="3"
        android:text=""
        />
    <Button
        android:id="@+id/n1"
        android:text="1"
        />
    <Button
        android:id="@+id/n2"
        android:text="2"
        />
    <Button
        android:id="@+id/n3"
        android:text="3"/>
    <Button
        android:id="@+id/n4"
        android:text="4"/>
    <Button
        android:id="@+id/n5"
        android:text="5"/>
    <Button
        android:id="@+id/n6"
        android:text="6"/>
    <Button
        android:id="@+id/n7"
        android:text="7"/>
    <Button
        android:id="@+id/n8"
        android:text="8"/>
    <Button
        android:id="@+id/n9"
        android:text="9"/>
    <Button
        android:id="@+id/nplus"
        android:text="+"
        />
    <Button
        android:id="@+id/n0"
        android:text="0"
        />
    <Button
        android:id="@+id/nminus"
        android:text="+"
        />
    <Button
        android:id="@+id/nmul"
        android:text="*"
        />
    <Button
        android:id="@+id/ndiv"
        android:text="/"
        />
    <Button
        android:id="@+id/ndeq"
        android:text="="
        />
    <Button
    android:id="@+id/ndot"
    android:text="."
    />
    <Button
        android:id="@+id/nclear"
        android:text="clear"
     />

</GridLayout>